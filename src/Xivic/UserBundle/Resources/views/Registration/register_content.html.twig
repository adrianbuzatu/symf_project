<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    <div class="form_item">
                    <div class='form_label'>
                        {{ form_label(form.username) }}
                    </div>
                    <div class='form_errors'>
                        {{ form_errors(form.username) }}
                    </div>
                    <div class='form_input'>
                        {{ form_widget(form.username, { 'attr': {'class': 'form_input_format'} }) }}
                    </div>
                </div>		
                
                <div class="form_item">
                    <div class='form_label'>
                        {{ form_label(form.email) }}
                    </div>
                    <div class='form_errors'>
                        {{ form_errors(form.email) }}
                    </div>
                    <div class='form_input'>
                        {{ form_widget(form.email, { 'attr': {'class': 'form_input_format'} }) }}
                    </div>
                </div>
                
                <div class="form_item">
                    <div class='form_label'>
                        {{ form_label(form.plainPassword.first) }}
                    </div>
                    <div class='form_errors'>
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                    <div class='form_input'>
                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form_input_format'} }) }}
                    </div>
                </div>
                
                <div class="form_item">
                    <div class='form_label'>
                        {{ form_label(form.plainPassword.second) }}
                    </div>
                    <div class='form_errors'>
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                    <div class='form_input'>
                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form_input_format'} }) }}
                    </div>
                </div>
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
